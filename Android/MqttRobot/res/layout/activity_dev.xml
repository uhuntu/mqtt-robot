<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DevActivity" >

    <Button
        android:id="@+id/devSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Switch" />

    <Button
        android:id="@+id/devTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/devSwitch"
        android:text="TV" />

    <Button
        android:id="@+id/devFan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/devTV"
        android:text="Fan" />

    <Button
        android:id="@+id/devWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/devTV"
        android:layout_toLeftOf="@+id/devTV"
        android:layout_marginRight="20dp"
        android:text="Window" />
    
    <Button
        android:id="@+id/devLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/devTV"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/devTV"
        android:text="Light" />

</RelativeLayout>